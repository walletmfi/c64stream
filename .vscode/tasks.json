{
    "version": "2.0.0",
    "tasks": [
        // Cross-platform build tasks - these override workspace tasks
        {
            "label": "Build Debug Plugin (Windows)",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "build_x64",
                "--config",
                "Debug"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "dependsOrder": "sequence",
            "dependsOn": [
                "Install Plugin to OBS (Windows)"
            ],
            "windows": {
                "command": "cmake"
            },
            "linux": {
                "command": "echo",
                "args": ["This task is Windows-only"]
            },
            "osx": {
                "command": "echo",
                "args": ["This task is Windows-only"]
            },
            "problemMatcher": ["$gcc"],
            "runOptions": {
                "instanceLimit": 1
            }
        },
        {
            "label": "VSCode: Build Debug Plugin (Linux)",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "build_x86_64"
            ],
            "group": {
                "kind": "build"
            },
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "dependsOrder": "sequence",
            "dependsOn": [
                "VSCode: Install Plugin to OBS (Linux)"
            ],
            "linux": {
                "command": "cmake"
            },
            "windows": {
                "command": "echo",
                "args": ["This task is Linux-only"]
            },
            "osx": {
                "command": "echo",
                "args": ["This task is Linux-only"]
            },
            "problemMatcher": ["$gcc"],
            "runOptions": {
                "instanceLimit": 1
            }
        },

        // Plugin installation tasks
        {
            "label": "Install Plugin to OBS (Windows)",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-ExecutionPolicy", "Bypass",
                "-File",
                "${workspaceFolder}/build-aux/install-plugin-windows.ps1"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "windows": {
                "command": "powershell"
            },
            "linux": {
                "command": "echo",
                "args": ["This task is Windows-only"]
            },
            "osx": {
                "command": "echo",
                "args": ["This task is Windows-only"]
            },
            "problemMatcher": []
        },
        {
            "label": "VSCode: Install Plugin to OBS (Linux)",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "mkdir -p \"$HOME/.config/obs-studio/plugins/c64stream/bin/64bit\" && mkdir -p \"$HOME/.config/obs-studio/plugins/c64stream/data\" && cp \"build_x86_64/c64stream.so\" \"$HOME/.config/obs-studio/plugins/c64stream/bin/64bit/\" && cp -r \"data\"/* \"$HOME/.config/obs-studio/plugins/c64stream/data/\" && echo 'Plugin installed successfully'"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "linux": {
                "command": "bash"
            },
            "windows": {
                "command": "echo",
                "args": ["This task is Linux-only"]
            },
            "osx": {
                "command": "echo",
                "args": ["This task is Linux-only"]
            },
            "problemMatcher": []
        },

        // Clean tasks
        {
            "label": "Clean Build (Windows)",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-Command",
                "if (Test-Path 'build_x64') { Remove-Item -Recurse -Force 'build_x64'; Write-Host 'Cleaned build_x64' } else { Write-Host 'No build_x64 directory to clean' }"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "windows": {
                "command": "powershell"
            },
            "problemMatcher": []
        },
        {
            "label": "Clean Build (Linux)",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "if [ -d 'build_x86_64' ]; then rm -rf build_x86_64 && echo 'Cleaned build_x86_64'; else echo 'No build_x86_64 directory to clean'; fi"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "linux": {
                "command": "bash"
            },
            "problemMatcher": []
        },

        // Simplified Linux-only task that does everything in one step
        {
            "label": "Linux: Build and Install Plugin",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "echo 'Building plugin...' && cmake --build build_x86_64 && echo 'Installing plugin...' && mkdir -p \"$HOME/.config/obs-studio/plugins/c64stream/bin/64bit\" && mkdir -p \"$HOME/.config/obs-studio/plugins/c64stream/data\" && cp \"build_x86_64/c64stream.so\" \"$HOME/.config/obs-studio/plugins/c64stream/bin/64bit/\" && cp -r \"data\"/* \"$HOME/.config/obs-studio/plugins/c64stream/data/\" && echo 'Plugin build and install completed successfully!'"
            ],
            "group": {
                "kind": "build"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "linux": {
                "command": "bash"
            },
            "windows": {
                "command": "echo",
                "args": ["This task is Linux-only - use Windows tasks instead"]
            },
            "osx": {
                "command": "echo",
                "args": ["This task is Linux-only"]
            },
            "problemMatcher": ["$gcc"]
        }
    ]
}
