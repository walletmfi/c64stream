        {
            "name": "ü™ü Debug OBS with C64 Stream Plugin (Windows)",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "C:/Program Files/obs-studio/bin/64bit/obs64.exe",
            "args": ["--verbose"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "console": "externalTerminal",
            "preLaunchTask": "Build Debug Plugin (Windows)",
            "logging": {
                "moduleLoad": false,
                "trace": false,
                "engineLogging": false,
                "programOutput": true,
                "exceptions": true
            }
        }
    ]
